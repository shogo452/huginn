---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  currentPage?: 'articles' | 'feeds' | 'tags' | 'keywords' | 'settings';
  ogImage?: string;
}

const { title, description = "技術記事を集約するRSSフィードリーダー", currentPage = 'articles', ogImage } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
const siteUrl = 'https://shogo452.github.io';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = ogImage || `${siteUrl}${baseUrl}og-image.png`;

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Huginn",
  "description": "技術記事を集約するRSSフィードリーダー",
  "url": `${siteUrl}${baseUrl}`,
  "publisher": {
    "@type": "Person",
    "name": "shogo452"
  }
};
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:site_name" content="Huginn" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#0F172A" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Huginn" />

    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}icons/icon.svg`} />
    <link rel="apple-touch-icon" href={`${baseUrl}icons/icon-192.png`} />

    <!-- PWA Manifest -->
    <link rel="manifest" href={`${baseUrl}manifest.json`} />

    <!-- Google Fonts - Noto Sans JP -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <title>{title}</title>
    <script is:inline>
      (function() {
        const saved = localStorage.getItem('huginn-theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = saved || (prefersDark ? 'dark' : 'light');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="font-sans bg-background text-foreground min-h-screen pt-14">
    <!-- Desktop Header -->
    <header class="fixed top-0 left-0 right-0 h-14 bg-background border-b border-border flex items-center justify-between px-12 z-50 max-lg:hidden">
      <a href={baseUrl} class="flex items-baseline gap-1.5">
        <span class="text-xl font-bold text-foreground">Huginn</span>
        <span class="text-[10px] text-muted-foreground">RSS</span>
      </a>
      <nav class="flex items-center gap-8">
        <a
          href={baseUrl}
          class:list={[
            "text-sm transition-colors hover:text-foreground",
            currentPage === 'articles' ? "text-foreground font-medium" : "text-muted-foreground"
          ]}
        >
          Articles
        </a>
        <a
          href={`${baseUrl}tags/`}
          class:list={[
            "text-sm transition-colors hover:text-foreground",
            currentPage === 'tags' ? "text-foreground font-medium" : "text-muted-foreground"
          ]}
        >
          Tags
        </a>
        <a
          href={`${baseUrl}feeds/`}
          class:list={[
            "text-sm transition-colors hover:text-foreground",
            currentPage === 'feeds' ? "text-foreground font-medium" : "text-muted-foreground"
          ]}
        >
          Feeds
        </a>
        <a
          href={`${baseUrl}keywords/`}
          class:list={[
            "text-sm transition-colors hover:text-foreground",
            currentPage === 'keywords' ? "text-foreground font-medium" : "text-muted-foreground"
          ]}
        >
          Keywords
        </a>
        <a
          href={`${baseUrl}config/`}
          class:list={[
            "text-sm transition-colors hover:text-foreground",
            currentPage === 'settings' ? "text-foreground font-medium" : "text-muted-foreground"
          ]}
        >
          Config
        </a>
        <div class="flex items-center gap-1">
          <a
            href="https://github.com/shogo452/huginn"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-9 h-9 rounded-full hover:bg-muted text-muted-foreground hover:text-foreground transition-colors"
            aria-label="GitHub"
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          <button
            class="theme-toggle flex items-center justify-center w-9 h-9 rounded-full hover:bg-muted text-muted-foreground hover:text-foreground transition-colors"
            id="theme-toggle"
            aria-label="テーマ切り替え"
          >
            <svg class="icon-sun hidden dark:block" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="5"></circle>
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
            <svg class="icon-moon block dark:hidden" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <!-- Mobile Header -->
    <header class="lg:hidden fixed top-0 left-0 right-0 h-14 bg-background border-b border-border flex items-center justify-between px-4 z-50">
      <a href={baseUrl} class="flex items-baseline gap-1.5">
        <span class="text-xl font-bold text-foreground">Huginn</span>
        <span class="text-[10px] text-muted-foreground">RSS</span>
      </a>
      <div class="flex items-center gap-1">
        <a
          href="https://github.com/shogo452/huginn"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center w-9 h-9 rounded-full hover:bg-muted text-muted-foreground hover:text-foreground transition-colors"
          aria-label="GitHub"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <button
          class="flex items-center justify-center w-9 h-9 rounded-full hover:bg-muted text-muted-foreground hover:text-foreground transition-colors"
          id="mobile-theme-toggle"
          aria-label="テーマ切り替え"
        >
          <svg class="icon-sun hidden dark:block" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <svg class="icon-moon block dark:hidden" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </div>
    </header>

    <slot />

    <!-- Mobile Bottom Navigation -->
    <nav class="lg:hidden fixed bottom-0 left-0 right-0 h-14 bg-background border-t border-border flex justify-around items-center z-50">
      <a
        href={baseUrl}
        class:list={[
          "flex flex-col items-center gap-0.5 text-[10px] p-2",
          currentPage === 'articles' ? "text-foreground font-semibold" : "text-muted-foreground"
        ]}
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2Zm0 0a2 2 0 0 1-2-2v-9c0-1.1.9-2 2-2h2"></path>
          <path d="M18 14h-8"></path>
          <path d="M15 18h-5"></path>
          <path d="M10 6h8v4h-8V6Z"></path>
        </svg>
        <span>Articles</span>
      </a>
      <a
        href={`${baseUrl}tags/`}
        class:list={[
          "flex flex-col items-center gap-0.5 text-[10px] p-2",
          currentPage === 'tags' ? "text-foreground font-semibold" : "text-muted-foreground"
        ]}
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2H2v10l9.29 9.29c.94.94 2.48.94 3.42 0l6.58-6.58c.94-.94.94-2.48 0-3.42L12 2Z"></path>
          <path d="M7 7h.01"></path>
        </svg>
        <span>Tags</span>
      </a>
      <a
        href={`${baseUrl}feeds/`}
        class:list={[
          "flex flex-col items-center gap-0.5 text-[10px] p-2",
          currentPage === 'feeds' ? "text-foreground font-semibold" : "text-muted-foreground"
        ]}
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 11a9 9 0 0 1 9 9"></path>
          <path d="M4 4a16 16 0 0 1 16 16"></path>
          <circle cx="5" cy="19" r="1"></circle>
        </svg>
        <span>Feeds</span>
      </a>
      <a
        href={`${baseUrl}keywords/`}
        class:list={[
          "flex flex-col items-center gap-0.5 text-[10px] p-2",
          currentPage === 'keywords' ? "text-foreground font-semibold" : "text-muted-foreground"
        ]}
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"></path>
          <path d="M9 18h6"></path>
          <path d="M10 22h4"></path>
        </svg>
        <span>Keywords</span>
      </a>
      <a
        href={`${baseUrl}config/`}
        class:list={[
          "flex flex-col items-center gap-0.5 text-[10px] p-2",
          currentPage === 'settings' ? "text-foreground font-semibold" : "text-muted-foreground"
        ]}
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        </svg>
        <span>Settings</span>
      </a>
    </nav>

    <script>
      function toggleTheme() {
        const isDark = document.documentElement.classList.contains('dark');
        document.documentElement.classList.toggle('dark', !isDark);
        localStorage.setItem('huginn-theme', isDark ? 'light' : 'dark');
      }

      document.getElementById('theme-toggle')?.addEventListener('click', toggleTheme);
      document.getElementById('mobile-theme-toggle')?.addEventListener('click', toggleTheme);

      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        if (!localStorage.getItem('huginn-theme')) {
          document.documentElement.classList.toggle('dark', e.matches);
        }
      });

      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          const baseUrl = document.querySelector('link[rel="manifest"]')?.href?.replace('manifest.json', '') || '/huginn/';
          navigator.serviceWorker.register(baseUrl + 'sw.js')
            .then((registration) => console.log('SW registered:', registration.scope))
            .catch((error) => console.log('SW registration failed:', error));
        });
      }
    </script>

    <style is:global>
      body {
        font-family: "Noto Sans JP", -apple-system, BlinkMacSystemFont, sans-serif;
      }

      @media (max-width: 1024px) {
        body {
          padding-bottom: 56px;
        }
      }
    </style>
  </body>
</html>
